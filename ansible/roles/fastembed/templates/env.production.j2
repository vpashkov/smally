# FastEmbed API Production Configuration
# Generated by Ansible

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# API Configuration
API_TITLE=FastEmbed API
API_VERSION=1.0.0
ALLOWED_ORIGINS={{ fastembed_allowed_origins | join(',') }}

# Database
DATABASE_URL=postgres://{{ fastembed_db_user }}:{{ fastembed_db_password }}@postgres:5432/{{ fastembed_db_name }}?sslmode=disable
POSTGRES_USER={{ fastembed_db_user }}
POSTGRES_PASSWORD={{ fastembed_db_password }}
POSTGRES_DB={{ fastembed_db_name }}

# Redis Cache
REDIS_URL=redis://redis:6379/0
CACHE_TTL={{ fastembed_cache_ttl }}

# Security
SECRET_KEY={{ fastembed_secret_key }}
JWT_SECRET_KEY={{ fastembed_jwt_secret }}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Rate Limiting (per minute)
RATE_LIMIT_FREE={{ fastembed_rate_limit_free }}
RATE_LIMIT_BASIC={{ fastembed_rate_limit_basic }}
RATE_LIMIT_PRO={{ fastembed_rate_limit_pro }}
RATE_LIMIT_ENTERPRISE={{ fastembed_rate_limit_enterprise }}

# Model Configuration
MODEL_NAME={{ fastembed_model_name }}
MODEL_PATH={{ fastembed_model_path }}
MAX_TOKENS=128
EMBEDDING_DIM={{ fastembed_embedding_dim }}
MAX_BATCH_SIZE={{ fastembed_max_batch_size }}

# Server
HOST=0.0.0.0
PORT=8000
WORKERS={{ fastembed_workers }}

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Admin
ADMIN_EMAIL={{ fastembed_admin_email }}
ADMIN_PASSWORD={{ fastembed_admin_password }}

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD={{ fastembed_admin_password }}
