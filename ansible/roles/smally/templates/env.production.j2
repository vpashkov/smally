# Smally API Production Configuration
# Generated by Ansible

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# API Configuration
API_TITLE=Smally API
API_VERSION=1.0.0
ALLOWED_ORIGINS={{ smally_allowed_origins | join(',') }}

# Database
DATABASE_URL=postgres://{{ smally_db_user }}:{{ smally_db_password }}@postgres:5432/{{ smally_db_name }}?sslmode=disable
POSTGRES_USER={{ smally_db_user }}
POSTGRES_PASSWORD={{ smally_db_password }}
POSTGRES_DB={{ smally_db_name }}

# Redis Cache
REDIS_URL=redis://redis:6379/0
CACHE_TTL={{ smally_cache_ttl }}

# Security
SECRET_KEY={{ smally_secret_key }}
JWT_SECRET_KEY={{ smally_jwt_secret }}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Rate Limiting (per minute)
RATE_LIMIT_FREE={{ smally_rate_limit_free }}
RATE_LIMIT_BASIC={{ smally_rate_limit_basic }}
RATE_LIMIT_PRO={{ smally_rate_limit_pro }}
RATE_LIMIT_ENTERPRISE={{ smally_rate_limit_enterprise }}

# Model Configuration
MODEL_NAME={{ smally_model_name }}
MODEL_PATH={{ smally_model_path }}
MAX_TOKENS=128
EMBEDDING_DIM={{ smally_embedding_dim }}
MAX_BATCH_SIZE={{ smally_max_batch_size }}

# Server
HOST=0.0.0.0
PORT=8000
WORKERS={{ smally_workers }}

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Admin
ADMIN_EMAIL={{ smally_admin_email }}
ADMIN_PASSWORD={{ smally_admin_password }}

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD={{ smally_admin_password }}
