# Terraform Variables Example
# Copy to terraform.tfvars and fill in your values

# Hetzner Cloud API token (get from: https://console.hetzner.cloud)
hcloud_token = "YOUR_HETZNER_API_TOKEN"

# Environment
environment = "production"

# Server configuration
server_type = "ccx33"  # 8 vCPU, 32GB RAM (~€45/month)
# Other options:
#   cax11: 2 vCPU,  4GB RAM (~€4/month)   - Development
#   cx22:  2 vCPU,  4GB RAM (~€5/month)   - Testing only
#   cpx31: 4 vCPU,  8GB RAM (~€15/month)  - Staging
#   ccx23: 4 vCPU, 16GB RAM (~€25/month)  - Small production
#   ccx33: 8 vCPU, 32GB RAM (~€45/month)  - Recommended
#   ccx43: 16 vCPU, 64GB RAM (~€90/month) - High traffic

server_image = "ubuntu-24.04"
location     = "nbg1"  # Nuremberg (nbg1, fsn1, hel1, ash, hil)

# SSH access
ssh_public_key_path = "~/.ssh/id_ed25519.pub"

# Restrict SSH access to specific IPs (recommended for production)
allowed_ssh_ips = [
  "0.0.0.0/0",  # Allow all - CHANGE THIS in production!
  # "203.0.113.0/24",  # Your office/home IP range
]

# Monitoring access (Prometheus, Grafana)
enable_prometheus_access = false  # Keep false, use SSH tunnel
enable_grafana_access    = false  # Keep false, use SSH tunnel
monitoring_ips           = []

# Storage
enable_persistent_volume = true
volume_size              = 100  # GB

# Floating IP (allows easy server migration)
enable_floating_ip = true

# Domain (optional - for DNS)
domain_name = "api.smally.io"  # Change to your domain

# Cloudflare (optional - if using Cloudflare DNS)
# cloudflare_zone_id      = "YOUR_ZONE_ID"
# cloudflare_proxy_enabled = false
